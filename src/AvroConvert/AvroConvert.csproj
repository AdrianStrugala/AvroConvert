<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Adrian Strugala</Authors>
    <AssemblyVersion>2.2.2.0</AssemblyVersion>
    <FileVersion>2.2.2.0</FileVersion>
    <Version>2.2.2</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Apache Avro serializer for .NET.</Description>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <ApplicationIcon />
    <StartupObject />
    <Product>AvroConvert</Product>
    <PackageId>AvroConvert</PackageId>
    <RepositoryUrl>https://github.com/AdrianStrugala/AvroConvert</RepositoryUrl>
    <AssemblyName>SolTechnology.Avro</AssemblyName>
    <RootNamespace>SolTechnology.Avro</RootNamespace>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup>
    <TargetsForTfmSpecificBuildOutput>$(TargetsForTfmSpecificBuildOutput);CopyProjectReferencesToPackage</TargetsForTfmSpecificBuildOutput>
  </PropertyGroup>

  <Target Name="CopyProjectReferencesToPackage" DependsOnTargets="ResolveReferences">
    <ItemGroup>
      <BuildOutputInPackage Include="@(ReferenceCopyLocalPaths-&gt;WithMetadataValue('ReferenceSourceTarget', 'ProjectReference')-&gt;WithMetadataValue('PrivateAssets', 'all'))" />
    </ItemGroup>
  </Target>

  <ItemGroup>
    <!--   AUTOMAPPER TO REMOVE -->
    <PackageReference Include="AutoMapper" Version="8.0.0" />
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="System.CodeDom" Version="4.4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Snappy.Standard\Snappy.Standard.csproj">
      <PrivateAssets>all</PrivateAssets>
    </ProjectReference>
  </ItemGroup>

  <!-- <ItemGroup> -->
  <!--   <Content Include="..\Snappy.Standard\snappy32.dll"> -->
  <!--     <CopyToOutputDirectory>Always</CopyToOutputDirectory> -->
  <!--   </Content> -->
  <!--   <Content Include="..\Snappy.Standard\snappy64.dll"> -->
  <!--     <CopyToOutputDirectory>Always</CopyToOutputDirectory> -->
  <!--   </Content> -->
  <!-- </ItemGroup> -->


  <ItemGroup>
    <Content Include="$(OutputPath)\snappy32.dll">
      <Pack>true</Pack>
      <PackagePath>lib\$(TargetFramework)</PackagePath>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="$(OutputPath)\snappy64.dll">
      <Pack>true</Pack>
      <PackagePath>lib\$(TargetFramework)</PackagePath>
    </Content>
  </ItemGroup>

</Project>
